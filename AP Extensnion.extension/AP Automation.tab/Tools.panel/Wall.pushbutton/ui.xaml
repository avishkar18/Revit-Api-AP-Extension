<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AP Automation - Wall Width" Height="210" Width="350" ResizeMode="NoResize" SizeToContent="Height">
	<StackPanel Margin="15">
		<Label Content="ENTER TOTAL WIDTH OF WALL" FontSize="16" FontWeight="Bold" Width="250" HorizontalAlignment="Center"/>
		<Label Content="PLEASE ENTER INCHES ONLY" FontSize="12" Width="180" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
		<TextBox Name="WidthTextBox" Margin="15" Padding="15,4,15,4" Width="100" FontSize="16" VerticalContentAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
		<Button Name="ConfirmButton" Content="Confirm" Width="100" Height="35" FontSize="16" FontWeight="Bold" Padding="15 2 15 2" HorizontalAlignment="Center"/>
	</StackPanel>
</Window>
 